<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:e='urn:import:com.google.gwt.editor.ui.client'
             xmlns:boulderlog='urn:import:org.myboulderlog.client.shared.widget.richtext'>
    <g:HTMLPanel>
        <div>
            Name:
            <e:ValueBoxEditorDecorator ui:field="name">
                <e:valuebox>
                    <g:TextBox ui:field="nameBox"/>
                </e:valuebox>
            </e:ValueBoxEditorDecorator>
            <br/>
            Description:
            <boulderlog:RichTextAreaEditorDecorator ui:field="description">
                <boulderlog:richtexteditor>
                    <boulderlog:RichTextEditor/>
                </boulderlog:richtexteditor>
            </boulderlog:RichTextAreaEditorDecorator>
            <br/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
