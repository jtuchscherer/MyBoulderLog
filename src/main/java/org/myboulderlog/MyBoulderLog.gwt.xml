<!DOCTYPE module PUBLIC "//gwt-module/"
        "http://google-web-toolkit.googlecode.com/svn/tags/2.1.0/distro-source/core/src/gwt-module.dtd">
<module rename-to="myboulderlog">

    <!-- Inherit the core Web Toolkit stuff.                        -->
    <inherits name='com.google.gwt.user.User'/>
    <inherits name="com.google.gwt.place.Place"/>
    <inherits name="com.google.gwt.activity.Activity"/>
    <inherits name="com.google.gwt.logging.Logging"/>

    <!-- guice injector for gwt -->
    <inherits name="com.google.gwt.inject.Inject"/>

    <!-- for testing -->
    <inherits name="com.google.gwt.junit.JUnit"/>

    <!--  inherit css based theme -->
    <inherits name='com.google.gwt.user.theme.standard.Standard'/>
    <inherits name="com.google.gwt.requestfactory.RequestFactory"/>

    <!-- configure logging -->
    <set-property name="gwt.logging.enabled" value="TRUE"/>
    <set-property name="gwt.logging.logLevel" value="ALL"/>
    <set-property name="gwt.logging.consoleHandler" value="ENABLED"/>
    <set-property name="gwt.logging.simpleRemoteHandler" value="ENABLED"/>
    <set-property name="gwt.logging.developmentModeHandler" value="ENABLED"/>
    <set-property name="gwt.logging.popupHandler" value="DISABLED"/>
    <set-property name="gwt.logging.popupHandler" value="DISABLED"/>
    <set-property name="gwt.logging.systemHandler" value="DISABLED"/>

    <!-- Specify the app entry point class.                         -->
    <entry-point class='org.myboulderlog.client.mainapp.entrypoints.MyBoulderLogEntryPoint'/>

    <!-- Specify the application specific style sheet.              -->
    <stylesheet src='/css/MyBoulderLog.css'/>

    <source path='client/mainapp'/>
    <source path='shared'/>
</module>
