<!DOCTYPE module PUBLIC "//gwt-module/"
        "http://google-web-toolkit.googlecode.com/svn/tags/2.1.0/distro-source/core/src/gwt-module.dtd">
<module rename-to="myboulderlog">

    <!-- Inherit the core Web Toolkit stuff.                        -->
    <inherits name='com.google.gwt.user.User'/>
    <inherits name="com.google.gwt.place.Place"/>
    <inherits name="com.google.gwt.activity.Activity"/>
    <inherits name="com.google.gwt.logging.Logging"/>

    <!-- guice injector for gwt -->
    <inherits name="com.google.gwt.inject.Inject"/>

    <!-- for testing -->
    <inherits name="com.google.gwt.junit.JUnit"/>

    <!--  inherit css based theme -->
    <inherits name='com.google.gwt.user.theme.standard.Standard'/>

    <!-- configure logging -->
    <set-property name="gwt.logging.popupHandler" value="DISABLED" />    
    <set-property name="gwt.logging.simpleRemoteHandler" value="ENABLED" />
    <set-property name="gwt.logging.logLevel" value="FINE"/>

    <!-- Specify the app entry point class.                         -->
    <entry-point class='org.myboulderlog.client.entrypoints.MessageEntryPoint'/>

    <!-- Specify the application specific style sheet.              -->
    <stylesheet src='Application.css'/>

    <servlet path="/MessageService" class="org.myboulderlog.server.service.MessageServiceImpl"/>
</module>
